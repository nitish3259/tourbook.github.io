<%-include("../partials/header")%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
	      Edit Info About <%= hotel.name %>
       </h1>

       <div style="width:30%;margin:25px auto;">
		<form action="/campgrounds/<%= campground_id %>/hotels/<%= hotel._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
		    <div class="form-group">
			  <input class="form-control" type="text" name="name" value=<%= hotel.name %>>
			</div>
			<div class="form-group">
			  <input class="form-control" type="text" name="url" value=<%= hotel.url %> >
			</div>
			<div class="form-group">
			  <input class="form-control" type="text" name="address" value=<%= hotel.address %> >
			</div>
			<div class="form-group">
			  <input class="form-control" type="number" name="price" value=<%= hotel.price %> min="0.01" step="0.01">
			</div>
	        <div class="form-group">
				<label for="image">Image</label>
				<input class="form-control" type="file" id="image" name="image" accept="image/*">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">submit</button>
			</div>
       </form>
		   <a href="/campgrounds">GO BACK</a>
		</div>
	</div>
</div>

<%-include("../partials/footer")%>