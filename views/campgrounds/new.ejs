<%-include("../partials/header")%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
	      create a new TourBlog
       </h1>

       <div style="width:30%;margin:25px auto;">
		<form action="/campgrounds" method="post" enctype="multipart/form-data">
		    <div class="form-group">
			  <input class="form-control" type="text" name="campground[name]" placeholder="name" required="true">
			</div>
			<div class="form-group">
			  <input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01" required="true">
			</div>
	        <div class="form-group">
				<label for="image">Image</label>
				<input class="form-control" type="file" id="image" name="image" accept="image/*" required="true">
			</div>
			<div class="form-group">
                 <label for="location">Location</label>
                 <input class="form-control" type="text" name="address" id="location" placeholder="Enter address">
             </div>
			 <div class="form-group">
				<input class="form-control" type="text" name="campground[description]" placeholder="description">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">submit</button>
			</div>
       </form>
		   <a href="/campgrounds">GO BACK</a>
		</div>
	</div>
</div>

<%-include("../partials/footer")%>